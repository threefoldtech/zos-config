{
    "title": "Product",
    "description": "A global zos node configuration",
    "type": "object",
    "properties": {
        "monitor": {
            "description": "Twins that must receive status and capacity reports",
            "type": "array",
            "items": {
                "type": "integer"
            }
        },
        "yggdrasil": {
            "description": "Global yggdrasil config for zos nodes",
            "type": "object",
            "properties": {
                "peers": {
                    "description": "List of public peers that should be used by the nodes",
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "monitor"
    ]
}
